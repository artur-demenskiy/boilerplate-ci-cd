# pnpm Configuration
# This file configures pnpm package manager settings

# Set package manager to pnpm
package-manager=pnpm

# Enable strict peer dependency resolution
strict-peer-dependencies=true

# Auto-install peer dependencies
auto-install-peers=true

# Set registry to npm
registry=https://registry.npmjs.org/

# Enable save exact versions
save-exact=true

# Set node-linker to hoisted
node-linker=hoisted

# Enable side-effects cache
side-effects-cache=true

# Set store directory
store-dir=.pnpm-store

# Enable progress bar
progress=true

# Set log level
loglevel=info

# Enable audit
audit=true

# Set fund to false (disable funding messages)
fund=false

# Set update-notifier to false
update-notifier=false 